#!/bin/bash   

# RC files
cd $(dirname $BASH_SOURCE)
BASE=$(pwd)
touch bashrc-extra
for rc in *rc *profile tmux.conf agignore; do
  mkdir -pv bak
  [ -e ~/.$rc ] && mv -v ~/.$rc bak/.$rc
  ln -sfv $BASE/$rc ~/.$rc
done

# git-prompt
if [ ! -e ~/.git-prompt.sh ]; then
  wget https://raw.githubusercontent.com/git/git/master/contrib/completion/git-prompt.sh -O ~/.git-prompt.sh
fi

# Setup for MACOS
if [ "$(uname -s)" == "Darwin" ]; then
  # Homebrew
  [ -z "$(which brew)" ] &&
    ruby -e "$(curl -fsSL https://raw.githubusercontent.com/Homebrew/install/master/install)"

  echo "UPDATE HOMEBREW AND INSTALL BASIC PACKAGES"
  brew update
  brew install \
    ag ant cmus coreutils cscope ctags \
    fish git gnuplot graphviz imagemagick \
    maven memcached redis curl \
    sl tmux reattach-to-user-namespace tree unrar vim wget zsh jq
  brew install macvim
  brew install rbenv ruby-build
  # Add rbenv to bash so that it loads every time you open a terminal
  echo 'if which rbenv > /dev/null; then eval "$(rbenv init -)"; fi' >> ~/.bash_profile
  source ~/.bash_profile
  
  echo "RUBY, RAILS, BUNDLE AND SINATRA"
  # Install Ruby
  rbenv install 2.2.3
  rbenv global 2.2.3
  gem install bundle
  gem install sinatra
  gem install rails -v 4.2.4
  rbenv rehash

  echo "DATABASE SETUP"
  brew install mysql
  brew install postgresql

  # To have launchd start at login:
  ln -sfv /usr/local/opt/mysql/*plist ~/Library/LaunchAgents
  ln -sfv /usr/local/opt/postgresql/*plist ~/Library/LaunchAgents

  # Then to load now:
  launchctl load ~/Library/LaunchAgents/homebrew.mxcl.mysql.plist
  launchctl load ~/Library/LaunchAgents/homebrew.mxcl.postgresql.plist

  echo "INSTALL METEOR"
  curl https://install.meteor.com/ | sh

  echo "INSTALL ELIXIR"
  brew install elixir
  export PATH="$PATH:/path/to/elixir/bin" >> ~/.bash_profile
 
  echo "INSTALL FZF"
  git clone --depth 1 https://github.com/junegunn/fzf.git ~/.fzf
  ~/.fzf/install

# Setup for LINUX
elif [ "$(expr substr $(uname -s) 1 5)" == "Linux" ]; then
  echo "setup rbenv"
  git clone https://github.com/sstephenson/rbenv.git ~/.rbenv
  echo 'export PATH="$HOME/.rbenv/bin:$PATH"' >> ~/.bashrc
  echo 'export PATH="$HOME/.rbenv/bin:$PATH"' >> ~/.zshrc
  echo 'eval "$(rbenv init -)"' >> ~/.bashrc
  echo 'eval "$(rbenv init -)"' >> ~/.zshrc
  echo "setup ruby-build"
  git clone https://github.com/sstephenson/ruby-build.git ~/.rbenv/plugins/ruby-build
  
# Setup for WINDOWS
elif [ "$(expr substr $(uname -s) 1 10)" == "MINGW32_NT" ]; then
   echo 'not configured yet :('
fi

# Git configuration
git config --global color.ui true
git config --global user.name "RenÃª Schneider"
git config --global user.email "renews@gmail.com"
ssh-keygen -t rsa -C "renews@gmail.comm"

 echo "================================"
 echo "COPY THIS TO YOUR GIT REP SSH"
 cat ~/.ssh/id_rsa.pub
 ECHO "================================"
tmux source-file ~/.tmux.conf

cd $(dirname $BASH_SOURCE)
BASE=$(pwd)

export GIT_SSL_NO_VERIFY=true
mkdir -p ~/.vim/autoload
mkdir -p ~/.vim/plugin
mkdir -p ~/.vim/tmp/backups
curl --insecure -fLo ~/.vim/autoload/plug.vim https://raw.github.com/junegunn/vim-plug/master/plug.vim
curl --insecure -fLo ~/.vim/plugin/Rename.vim  http://www.vim.org/scripts/download_script.php?src_id=16331 # vim plugin renamer :saveas

# vimrc
mv -v ~/.vimrc ~/.vimrc.old 2> /dev/null
ln -sf $BASE/vimrc ~/.vimrc

vim +PlugInstall +qall

rm -f ~/configure
rm -rf ~/dot-files
